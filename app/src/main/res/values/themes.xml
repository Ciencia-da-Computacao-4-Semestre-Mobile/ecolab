<?xml version="1.0" encoding="utf-8"?>
<!--
    THEMES.XML - SISTEMA DE TEMAS DO ECOLAB
    ========================================
    
    Este arquivo define o tema principal do aplicativo EcoLab,
    baseado no Material Design 3 (Material You) com customizações específicas.
    
    ESTRUTURA DO TEMA:
    1. Tema Base: Herda de Theme.Material3.DayNight para suporte automático a modo escuro
    2. Cores do Sistema: Mapeamento completo das cores semânticas do Material Design 3
    3. Configurações de Sistema: Status bar, navigation bar, window properties
    4. Estilos Customizados: Componentes específicos do EcoLab
    
    FILOSOFIA DE DESIGN:
    - Consistência visual em toda a aplicação
    - Suporte nativo a modo claro/escuro
    - Acessibilidade e contraste adequados
    - Identidade visual da marca EcoLab
    
    COMPONENTES CUSTOMIZADOS:
    - CardView: Bordas arredondadas e elevação consistente
    - Button: Cantos suaves e tipografia otimizada
    - TextInputLayout: Campos de entrada com estilo EcoLab
    - BottomNavigationView: Navegação principal customizada
    
    COMPATIBILIDADE:
    - Android API 21+ (Android 5.0+)
    - Suporte a Dynamic Colors (Android 12+)
    - Fallback gracioso para versões anteriores
-->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
        TEMA PRINCIPAL - ECOLAB MATERIAL DESIGN 3
        =========================================
        Tema base que define toda a identidade visual do aplicativo.
        Herda de Theme.Material3.DayNight para suporte automático a temas claro/escuro.
    -->
    <style name="Theme.EcoLab" parent="Theme.Material3.DayNight">
        <!-- 
            CORES PRIMÁRIAS - IDENTIDADE DA MARCA
            =====================================
            Verde como cor principal, representando sustentabilidade e natureza.
        -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        
        <!-- 
            CORES SECUNDÁRIAS - ELEMENTOS COMPLEMENTARES
            ============================================
            Verde mais claro para elementos de apoio e variações.
        -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        
        <!-- 
            CORES TERCIÁRIAS - DESTAQUES E ACENTOS
            ======================================
            Laranja para elementos de destaque e call-to-actions.
        -->
        <item name="colorTertiary">@color/tertiary_color</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>
        
        <!-- 
            CORES DE ERRO - FEEDBACK NEGATIVO
            =================================
            Vermelho para estados de erro e validação.
        -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        
        <!-- 
            CORES DE SUPERFÍCIE - FUNDOS E CONTAINERS
            =========================================
            Cores neutras para fundos de cards, dialogs e superfícies.
        -->
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- 
            CORES DE FUNDO - BACKGROUND PRINCIPAL
            =====================================
            Cor de fundo principal da aplicação e janelas.
        -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="android:windowBackground">@color/background_primary</item>
        
        <!-- 
            CORES DE CONTORNO - BORDAS E DIVISORES
            ======================================
            Cores para bordas, divisores e elementos de separação.
        -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
        
        <!-- 
            BARRAS DO SISTEMA - STATUS BAR E NAVIGATION BAR
            ===============================================
            Configurações para as barras do sistema Android.
            Cores que harmonizam com o tema da aplicação.
        -->
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_primary</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- 
            PROPRIEDADES DA JANELA - CONFIGURAÇÕES VISUAIS
            ==============================================
            Configurações específicas para o comportamento visual da janela.
            Controla transparência e aparência das barras do sistema.
        -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- 
            ESTILOS CUSTOMIZADOS - COMPONENTES MATERIAL DESIGN
            ==================================================
            Estilos personalizados para componentes específicos do Material Design.
            Sobrescreve configurações padrão para adequar ao design do EcoLab.
            
            Componentes incluídos:
            - CardView: Cards com elevação e cantos arredondados
            - Button: Botões com cores e ripple customizados
            - TextInputLayout: Campos de entrada com cores personalizadas
            - BottomNavigationView: Navegação inferior com cores específicas
        -->
        <!-- Material components styling -->
        <item name="materialCardViewStyle">@style/Widget.EcoLab.CardView</item>
        <item name="materialButtonStyle">@style/Widget.EcoLab.Button</item>
        <item name="textInputStyle">@style/Widget.EcoLab.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.EcoLab.BottomNavigationView</item>
    </style>
    
    <!-- 
        ESTILO CARDVIEW - CARDS PERSONALIZADOS
        ======================================
        Configurações para cards do Material Design.
        Define elevação, cantos arredondados e cores de fundo.
    -->
    <!-- Custom CardView style -->
    <style name="Widget.EcoLab.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="rippleColor">@color/ripple_surface</item>
    </style>
    
    <!-- 
        ESTILO BUTTON - BOTÕES PERSONALIZADOS
        =====================================
        Configurações para botões do Material Design.
        Define cores de fundo, texto e efeito ripple.
    -->
    <!-- Custom Button style -->
    <style name="Widget.EcoLab.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/ripple_primary</item>
    </style>

    <!-- 
        ESTILO TEXTINPUTLAYOUT - CAMPOS DE ENTRADA
        ==========================================
        Configurações para campos de texto do Material Design.
        Define cores de foco, hint e validação.
    -->
    <!-- Custom TextInputLayout style -->
    <style name="Widget.EcoLab.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
    
    <!-- 
        ESTILO BOTTOMNAVIGATIONVIEW - NAVEGAÇÃO INFERIOR
        ================================================
        Configurações para a barra de navegação inferior.
        Define cores de fundo, ícones selecionados e não selecionados.
    -->
    <!-- Custom BottomNavigationView style -->
    <style name="Widget.EcoLab.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="elevation">8dp</item>
        <item name="itemRippleColor">@color/ripple_surface</item>
    </style>
    

</resources>