<?xml version="1.0" encoding="utf-8"?>
<!--
    Este drawable "envelopa" o ícone da splash screen com um recuo (inset).
    Isso impede que o sistema Android corte as bordas da logo em telas de abertura
    que aplicam uma máscara circular por padrão (Android 12+).
-->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/ic_ecolab_logo_with_text"
    android:insetLeft="32dp"
    android:insetTop="32dp"
    android:insetRight="32dp"
    android:insetBottom="32dp" />
